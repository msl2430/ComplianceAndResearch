                    </Border>
                    <Border  BorderBrush="{StaticResource LightBlueBrush}" BorderThickness="1" Margin="5" Padding="5" Visibility="{Binding Path=StarterDisplay.IsActive, Converter={StaticResource BoolToVisibilityConverter}}">
