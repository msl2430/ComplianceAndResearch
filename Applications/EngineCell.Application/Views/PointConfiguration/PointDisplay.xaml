<UserControl x:Class="EngineCell.Application.Views.PointConfiguration.PointDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="70" Width="350"
             d:DesignHeight="70" d:DesignWidth="350"
            Loaded="PointDisplay_OnLoaded">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
        <RowDefinition Height="35"/>
      </Grid.RowDefinitions>
      <Grid Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid Column="0">
          <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center" FontSize="14" Width="125" Content="{Binding Path=PointName}"></Label>
            <TextBox Text="{Binding Path=CustomName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="7,0,0,0" Width="125" 
                     LostFocus="UpdateTextPoint" TextChanged="MarkAsDirty"></TextBox>
            <TextBox IsReadOnly="True" Text="{Binding Path=Data}" VerticalAlignment="Center" Margin="7,0,0,0" Width="50" TextAlignment="Right"></TextBox>
          </StackPanel>
        </Grid>
      </Grid>
      <Grid Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid Column="0">
          <StackPanel Orientation="Horizontal">
            <Label Content="Stripchart:" VerticalAlignment="Center" Margin="125,0,0,0"></Label>
            <CheckBox IsChecked="{Binding Path=IncludeInStripChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="3,0,0,0" 
                      Click="UpdateCheckbox"></CheckBox>
            <Label Content="Scale:" VerticalAlignment="Center" Margin="7,0,0,0"></Label>
            <TextBox Text="{Binding Path=StripChartScale, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="3,0,0,0" Width="50" TextAlignment="Right"
                     LostFocus="UpdateTextPoint" TextChanged="MarkAsDirty"></TextBox>
          </StackPanel>
        </Grid>
      </Grid>
    </Grid>
</UserControl>
