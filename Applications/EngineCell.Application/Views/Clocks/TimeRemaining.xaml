<UserControl x:Class="EngineCell.Application.Views.Clocks.TimeRemaining"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngineCell.Application.Views.Clocks"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid Width="168" Margin="0,5,0,5">
            <Label Width="100" HorizontalAlignment="Left" VerticalAlignment="Center">Remaining Time:</Label>
            <TextBox Text="{Binding RemainingTime}" IsReadOnly="True" FontSize="15" Width="70" HorizontalAlignment="Right"></TextBox>
        </Grid>
    </Grid>
</UserControl>
