<UserControl x:Class="EngineCell.Application.Views.Clocks.RunTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngineCell.Application.Views.Clocks"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Height="40" Width="150">
    <Grid>
        <Grid Width="150" Margin="0,2,0,2">
            <Label Width="70" Height="40" FontSize="14"  HorizontalAlignment="Left" Margin="0,11,0,0"  VerticalAlignment="Center">Run Time:</Label>
            <TextBox IsUndoEnabled="False" Text="{Binding RunTime}" IsReadOnly="True" FontSize="14" FontWeight="DemiBold" Width="70" Height="25" HorizontalAlignment="Left" Margin="75,0,0,0" BorderBrush="Transparent"></TextBox>
        </Grid>
    </Grid>
</UserControl>
